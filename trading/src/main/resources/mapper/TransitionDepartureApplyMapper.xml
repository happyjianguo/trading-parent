    <!--按道理是一个申请单对应多个结算单，但是为了方便，我在这里搞成一对一，因为只查询一个最新的申请单，然后对应的一个未结算的结算单，所以最后是一对一的-->
    <select id="getOneByCustomerID" parameterType="com.dili.order.domain.TransitionDepartureApply"
            resultMap="BaseResultMap_oneToOne">
        select
          a.id AS 'aid',
          a.customer_id,
          a.customer_code,
          a.customer_name,
          a.biz_type,
          a.plate,
          a.trans_type_id,
          a.category_id,
          a.category_name,
          if(s.pay_status=1,s.id,null) AS 'sid',
          if(s.pay_status=1,s.gross_weight,null) AS 'sgross_weight',
          if(s.pay_status=1,s.net_weight,null) AS 'snet_weight',
          if(s.pay_status=1,s.tare_weight,null) AS 'stare_weight',
          if(s.pay_status=1,s.charge_amount,null) AS 'charge_amount'
        FROM
        (SELECT
          a.id,
          a.customer_id,
          a.customer_code,
          a.customer_name,
          a.biz_type,
          a.plate,
          a.trans_type_id,
          a.category_id,
          a.category_name,
          a.approval_time
        FROM transition_departure_apply a
        WHERE 1 = 1
          AND a.approval_state = 2
          AND a.pay_status IN ( 1, 3 )
          AND a.approval_time=
          (
          SELECT max( a.approval_time ) FROM transition_departure_apply a
          Where 1 = 1 AND a.customer_id = #{customerId} GROUP BY a.customer_id
          )
          AND a.customer_id = #{customerId})a
        LEFT JOIN transition_departure_settlement s ON s.apply_id=a.id
        GROUP BY a.id
    </select>

    <select id="listByQueryParams" parameterType="com.dili.order.domain.TransitionDepartureApply"
            resultType="com.dili.order.domain.TransitionDepartureApply">
        SELECT
        *
        FROM transition_departure_apply a
        WHERE 1 = 1
        <if test="approvalState != null">
            AND approval_state = #{approvalState}
        </if>
        <if test="bizType != null">
            AND biz_type = #{bizType}
        </if>
        <if test="customer != null and customer != ''">
            AND (customer_name like concat('%',#{customer},'%') or customer_code like concat('%',#{customer},'%'))
        </if>
        <if test="plate != null and plate != ''">
            AND plate like concat('%',#{plate},'%')
        </if>
        <if test="originator != null and originator != ''">
            AND (originator_name like concat('%',#{originator},'%') or originator_code like
            concat('%',#{originator},'%'))
        </if>
        <if test="operator != null and operator != ''">
            AND (approval_code like concat('%',#{operator},'%') or approval_name like concat('%',#{operator},'%'))
        </if>
        <if test="beginTime != null">
            AND originator_time  <![CDATA[>=]]> #{beginTime}
        </if>
        <if test="endTime != null">
            AND originator_time  <![CDATA[<=]]> #{endTime}
        </if>
    </select>
